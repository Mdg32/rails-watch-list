<div class="navbar-lewagon">
  <img class="mt-1 ml-3" src="https://www.creativefabrica.com/wp-content/uploads/2020/02/13/Celebration-Day-Logo-Graphics-1-103-580x386.jpg" height="50px" width="auto">
  <div class="links">
      <%= link_to 'New List', new_list_path, class: "a-primary" %>
      <%= link_to 'Movies', movies_path , class: "a-primary" %>
  </div>
</div>
<div class="banner d-flex justify-content-around">
  <div class="l d-block">
    <h1>
    <%= @list.name %></h1>
  </div>
</div>

<div class="cont d-flex justify-content-around mt-5">
  <% @list.movies.each do |movie| %>
    <div class="card d-block" style="width: 18rem;">
      <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
        <img src="<%= movie.poster_url %>" class="card-img-top" alt="...">
        <div class="card-body">
          <div class="card-title">
            <%= movie.title %>
          </div>
          <div class="card-text">
            <%=bookmark.comment%>
          </div>
          <%=link_to 'create bookmark', new_list_bookmark_path(bookmark) %>
        </div>
    </div>
  <% end %>
  <%= link_to 'Back', root_path %>
</div>
